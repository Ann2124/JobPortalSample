<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Here</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*<span><i class="fa fa-user" style="font-size:48px;"></i></span>
                    @Html.ActionLink("Job Here", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <style>
                .font {
                    font-family: 'Grandstander', cursive;
                    font-style: normal;
                }
            </style>
            <div class="font">


                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item"><a href="/home/index" class="nav-link" style="font-size:30px">Job Here <span><i class="fa fa-user" style="font-size:30px;"></i></span></a> </li>
                    <li class="nav-item"><a href="/home/index" class="nav-link" style="color:white">Home<span><i class="fa fa-home" style="color:white"></i></span></a> </li>
                    <li class="nav-item"><a href="/home/about" class="nav-link" style="color:white">About<span><i class="fa fa-info-circle" style="color:white"></i></span></a></li>
                    <li class="nav-item"><a href="/home/contact" class="nav-link" style="color:white">Customer Care<span><i class="fa fa-phone" style="color:white"></i></span></a> </li>
                </ul>


            </div>
        </div>


    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="text-center footer">
        <p>&copy; @DateTime.Now.Year - My Job Portal</p>
    </footer>
</body>
    


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</html>
