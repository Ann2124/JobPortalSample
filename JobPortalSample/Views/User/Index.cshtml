@model JobPortalSample.Models.User

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">User Login</h2>
<br/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex justify-content-center">
        <div class="card w-25 p-4 mt-5" style="box-shadow:0 19px 38px rgba(0,0,0,0.30),0 15px 12px rgba(0,0,0,0.22)">

            <h4 class="text-center text-black-50"><i class="fa fa-users">User</i></h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-form-label-lg">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-25", @required = "required" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-form-label-lg">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-25", @required = "required" } })
                </div>
            </div>

            <div class="form-group">
                <div class=" d-flex justify-content-center">
                    <button type="submit" class="btn btn-lg btn-block btn-warning">Login</button>

                </div>
            </div>
        </div>
    </div>


}

<br/>

<div class="d-flex justify-content-center mt-1" style="font-style:oblique">
    New User?
    @Html.ActionLink("Sign Up", "Register", "User")
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
